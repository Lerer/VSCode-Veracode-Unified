{
    "name": "veracode",
    "displayName": "Veracode",
    "description": "Scan with Veracode",
    "version": "0.0.1",
    "publisher": "buzzcode",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onView:veracodeExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Veracode configuration settings",
            "properties": {
                "veracode.credsFile": {
                    "type": ["string", "null"],
                    "defuault": "null",
                    "description": "Specifies the absolute filepath for the API Credentials"
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "veracodeExplorer",
                    "name": "Veracode"
                }
            ]
        },
        "commands": [
            {
                "command": "veracodeExplorer.sayHello",
                "title": "Hello",
                "category": "Veracode"
            },
            {
                "command": "veracodeExplorer.refresh",
                "title": "Refresh",
                "category": "Veracode",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "veracodeExplorer.cmd1",
                "title": "Cmd1",
                "category": "Veracode"
            },
            {
                "command": "veracodeExplorer.cmd2",
                "title": "Cmd2",
                "category": "Veracode"
            },
            {
                "command": "veracodeExplorer.cmd3",
                "title": "Cmd3",
                "category": "Veracode"
            },
            {
                "command": "veracodeExplorer.setCredsFile",
                "title": "Set Credentials File",
                "category": "Veracode"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "veracodeExplorer.refresh",
                    "when": "view == veracodeExplorer",
                    "group": "navigation"
                },
                {
                    "command": "veracodeExplorer.setCredsFile",
                    "when": "view == veracodeExplorer"
                }
            ],
            "view/item/context": [
                {
                    "command": "veracodeExplorer.cmd3",
                    "when": "view == veracodeExplorer",
                    "group": "navigation"
                },
                {
                    "command": "veracodeExplorer.sayHello",
                    "when": "view == veracodeExplorer",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "filereader": "^0.10.3"
    }
}
