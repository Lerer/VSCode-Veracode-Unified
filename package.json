{
    "name": "veracode",
    "displayName": "Veracode",
    "description": "Scan with Veracode",
    "version": "0.0.1",
    "publisher": "buzzcode",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onView:veracodeExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Veracode",
            "properties": {
                "veracode.credsFile": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "null",
                    "description": "Specifies the absolute filepath for the API Credentials"
                },
                "veracode.refreshCount": {
                    "type": "number",
                    "default": "10",
                    "description": "Number of apps to refresh in the list"
                },
                "veracode.logLevel": {
                    "type": ["string", "null"],
                    "default": "info",
                    "description": "Logging level (effective on next restart)",
                    "enum": [
                        "trace", "debug", "info", "warning", "error", "silent"
                    ]
                }
            }
        },
        "views": {
            "explorer": [
                {
                    "id": "veracodeExplorer",
                    "name": "Veracode"
                }
            ]
        },
        "commands": [
            {
                "command": "veracodeExplorer.sayHello",
                "title": "Hello",
                "category": "Veracode"
            },
            {
                "command": "veracodeExplorer.refresh",
                "title": "Refresh",
                "category": "Veracode",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "veracodeExplorer.cmd1",
                "title": "Cmd1",
                "category": "Veracode"
            },
            {
                "command": "veracodeExplorer.cmd2",
                "title": "Cmd2",
                "category": "Veracode"
            },
            {
                "command": "veracodeExplorer.cmd3",
                "title": "Cmd3",
                "category": "Veracode"
            },
            {
                "command": "veracodeExplorer.setCredsFile",
                "title": "Set Credentials File",
                "category": "Veracode"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "veracodeExplorer.refresh",
                    "when": "view == veracodeExplorer",
                    "group": "navigation"
                },
                {
                    "command": "veracodeExplorer.setCredsFile",
                    "when": "view == veracodeExplorer"
                }
            ],
            "view/item/context": [
                {
                    "command": "veracodeExplorer.cmd3",
                    "when": "view == veracodeExplorer",
                    "group": "navigation"
                },
                {
                    "command": "veracodeExplorer.sayHello",
                    "when": "view == veracodeExplorer",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/bluebird": "^3.5.5",
        "@types/loglevel": "^1.5.3",
        "@types/request": "^2.47.1",
        "@types/request-promise": "^4.1.42",
        "@types/sjcl": "^1.0.28",
        "@types/xml2js": "^0.4.3",
        "filereader": "^0.10.3",
        "loglevel": "^1.6.1",
        "request-promise": "^4.2.2",
        "request-promise-native": "^1.0.5",
        "sjcl": "^1.0.7",
        "xml-js": "^1.6.7",
        "xml2js": "^0.4.19"
    }
}
